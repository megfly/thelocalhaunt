
<h1>New Haunting Review </h1> 

<%= form_for @review do |f| %>

    <%= f.hidden_field :property_id %>
    <%= f.hidden_field :visitor_id %>

    <label>Review title:</label><br>
    <%= f.text_field :title %><br>

    <label>When did you visit this haunted location?</label><br>
    <%= f.date_field :date %><br>

    <label>What paranormal sights did you see?</label><br>
    <%= f.text_field :sighting %><br>

    <label>Did you hear any bumps in the night?</label><br>
    <%= f.text_field :noise %><br>

    <label>Did you experience any smells?</label><br>
    <%= f.text_field :smell %><br>

    <label>Were there any cold spots?</label><br>
    <%= f.text_field :cold_spot %><br>

    <label>Summary of events:</label><br>
    <%= f.text_area :summary %><br>

    <label>Spookiness Rating 1-10:</label><br>
    <%= f.number_field :rating %><br>

    <%= f.submit %>
<% end %>

<%= form_for @review do |f| %>
    <% if @review.errors.any? %>
    <ul>
      <% @review.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
    <% end %>
<% end %>