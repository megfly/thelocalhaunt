<%= render partial: "layouts/errors", locals: {object: @property} %>

<div id="app">

    <div id="wrapper">

<div class="container">
    <fieldset>
        <legend>Edit Your Property</legend>

<%= form_for @property do |f| %>

    <%= f.label "Property Name" %>
    <%= f.text_field :name %>

    <%= f.label "Property Location" %>
    <%= f.text_field :location %>

    <%= f.label "Haunted Happenings">
    <%= f.text_area :description %>

    <%= f.submit %>

<% end %>

</fieldset>
</div>
</div>
</div>