<%= render partial: "layouts/errors", locals: {object: @property} %>

<div id="app">

    <div id="wrapper">

<div class="container">
    <fieldset>
        <legend>New Haunted Location</legend>

<%= form_for @property do |f| %>

    <%= f.label "Property Name:" %>
    <%= f.text_field :name %>
    <br>
    <%= f.label "Property Location:" %>
    <%= f.text_field :location %>
    <br><br>
    <%= f.label "Ghost Story:" %>
    <%= f.text_area :description %>
    <br>
    <%= f.submit %>

<% end %>

</fieldset>
</div>
</div>
</div>